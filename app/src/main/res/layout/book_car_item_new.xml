<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@drawable/searchbox_border"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="#1daaa5"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="1." />

            <TextView
                android:id="@+id/tv_code"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/tv_pos"
                android:fontFamily="sans-serif"
                android:textColor="#2a2a2a"
                android:textSize="16sp"
                tools:text="62/LĐX/03/2020" />

            <ImageView
                android:id="@+id/imv_radio_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_radio_button_green_16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9f9f9"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xuat_phat"
                    android:textColor="#969696"
                    android:textSize="14sp"
                    tools:text="@string/xuat_phat" />

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:text="Hoàn kiếm, Hà Nội" />

                <TextView
                    android:id="@+id/tv_time_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#d58431"
                    android:textSize="12sp"
                    tools:text="23/03/20 14:45:00" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_from_to" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dich_den"
                    android:textColor="#969696"
                    android:textSize="14sp"
                    tools:text="@string/dich_den" />

                <TextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:text="Lê Chân, Hải Phòng" />

                <TextView
                    android:id="@+id/tv_time_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#d58431"
                    android:textSize="12sp"
                    tools:text="23/03/20 14:45:00" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_nguoi_tao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nguoi_tao_2"
                android:textColor="#969696"
                android:textSize="14sp"
                tools:text="@string/nguoi_tao_2" />

            <TextView
                android:id="@+id/tv_name_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="Nguyễn Minh Hội" />
        </RelativeLayout>

        <View
            android:id="@+id/view_layout_status"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alto" />

        <RelativeLayout
            android:id="@+id/layout_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trang_thai"
                android:textColor="#969696"
                android:textSize="14sp"
                tools:text="@string/trang_thai" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="Lái xe đóng lệnh" />
        </RelativeLayout>

        <View
            android:id="@+id/view_layout_reason"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alto" />

        <RelativeLayout
            android:id="@+id/layout_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ly_do"
                android:textColor="#969696"
                android:textSize="14sp"
                tools:text="@string/ly_do" />

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="Không thích" />
        </RelativeLayout>

        <View
            android:id="@+id/view_layout_nguoi_yeu_cau"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/alto"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layout_nguoi_yeu_cau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nguoi_yeu_cau_2"
                android:textColor="#969696"
                android:textSize="14sp"
                tools:text="@string/nguoi_yeu_cau_2" />

            <TextView
                android:id="@+id/tv_nguoi_yeu_cau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="Nguyễn Văn A" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
